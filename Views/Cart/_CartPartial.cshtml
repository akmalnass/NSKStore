@model List<NSKStore.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<style>
    body {
        background-color: #79ffbe;
        margin: 0;
        padding: 0;
    }

    .empty-cart-message {
        font-size: 24px;
        text-align: center;
        margin-bottom: 20px;
    }

    .go-shopping-btn {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
    
</style>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="empty-cart-message">Your shopping cart is empty. Start filling it up with amazing products!</p>
    <a href="/products" class="go-shopping-btn">Go Shopping Now</a>
}
