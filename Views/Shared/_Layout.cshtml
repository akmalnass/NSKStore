<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NSKStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NSKStore.styles.css" asp-append-version="true" />
 
       <style>
        /* Apply Horta font to specific elements */
        .navbar-nav .nav-link.horta-font {
            font-family: 'Horta', sans-serif;
        }

        /* Adjust font size for Shop Now, About Us, and Contact Us */
        .navbar-nav .nav-link.horta-font {
            font-size: 2em; /* Adjust the font size as needed */
        }

        .custom-navbar {
            background-color: #27cd7d; /* Change to your desired color */
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark custom-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Image/Logo2.jpg" width="100" height="50" /> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light horta-font" asp-area="" asp-controller="Home" asp-action="Shopnow">Shop Now</a> 
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light horta-font" asp-area="" asp-controller="Home" asp-action="Aboutus">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light horta-font" asp-area="" asp-controller="Home" asp-action="Contactus">Contact Us</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Cart">
                               <img src="~/Image/Cart2.png" width="50" height="50" />
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
